<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/selector_music_bg"
    android:layout_marginTop="10dp"
    >

    <ImageView
        android:id="@+id/iv_audio_play"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:src="@mipmap/icon_audio_play"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"/>

    <ImageView
        android:id="@+id/iv_progress_bar"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/icon_progress_bar"
        android:layout_toRightOf="@+id/iv_audio_play"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="38dp"/>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shape_line_bg"
        android:layout_toRightOf="@+id/iv_progress_bar"
        android:layout_alignTop="@+id/iv_progress_bar"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        />


    <TextView
        android:id="@+id/tv_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/color666666"
        android:layout_alignTop="@+id/v_line"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:text="/04:00"/>

    <TextView
        android:id="@+id/tv_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/colorde6500"
        android:layout_toLeftOf="@+id/tv_total_time"
        android:layout_alignTop="@id/tv_total_time"
        android:text="00:00"/>

    <TextView
        android:id="@+id/tv_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/color333333"
        android:maxLines="1"
        android:text="通车了！沈阳地铁九号线今日开通!"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"
        android:layout_marginLeft="20dp"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/tv_music_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="沈阳晚报"
        android:textColor="@color/color808080"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/tv_music_listened"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorada095"
        android:text="23,192已听"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="11dp"
        />

</RelativeLayout>